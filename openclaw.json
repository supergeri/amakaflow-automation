{
  "name": "amakaflow-automation",
  "description": "Autonomous test automation for AmakaFlow fitness platform (Web + iOS + Android + Watch)",
  "version": "3.0.0",
  "models": {
    "orchestration": {
      "provider": "moonshot",
      "model": "kimi-k2.5",
      "baseUrl": "https://api.moonshot.ai/v1",
      "apiKeyEnv": "MOONSHOT_API_KEY",
      "maxTokens": 8192,
      "temperature": 0
    },
    "coding": {
      "provider": "minimax",
      "model": "minimax-m2",
      "baseUrl": "https://api.minimax.chat/v1",
      "apiKeyEnv": "MINIMAX_API_KEY",
      "maxTokens": 16384,
      "temperature": 0.1
    }
  },
  "routing": {
    "default": "orchestration",
    "codeGeneration": "coding",
    "codeEdit": "coding",
    "codeReview": "coding"
  },
  "tools": {
    "browser": {
      "enabled": true,
      "headless": true,
      "timeout": 30000,
      "viewport": { "width": 1280, "height": 720 }
    },
    "exec": {
      "enabled": true,
      "timeout": 120000,
      "shell": "/bin/bash"
    },
    "read": {
      "enabled": true,
      "allowedPaths": ["scenarios/**", "flows/**", "skills/**", "*.md", "*.json", "artifacts/**"]
    },
    "write": {
      "enabled": true,
      "allowedPaths": ["artifacts/**", "flows/**"]
    }
  },
  "environment": {
    "UI_URL": "http://localhost:3000",
    "CHAT_API_URL": "http://localhost:8005",
    "MAPPER_API_URL": "http://localhost:8001",
    "CALENDAR_API_URL": "http://localhost:8003",
    "INGESTOR_API_URL": "http://localhost:8004",
    "IOS_APP_ID": "com.amakaflow.app",
    "ANDROID_APP_ID": "com.amakaflow.companion",
    "IOS_SIMULATOR": "iPhone 15 Pro",
    "WATCH_SIMULATOR": "Apple Watch Series 9 - 45mm",
    "ANDROID_EMULATOR": "Pixel_7_API_34",
    "WEAR_EMULATOR": "Wear_OS_Square_API_33"
  },
  "skills": ["skills/test-runner", "skills/test-writer"],
  "artifacts": {
    "directory": "artifacts",
    "screenshots": "artifacts/screenshots",
    "logs": "artifacts/logs",
    "reports": "artifacts/reports"
  },
  "defaults": {
    "suite": "smoke",
    "platform": "all",
    "retries": 1,
    "parallel": false
  },
  "platforms": {
    "web": { "enabled": true, "tool": "browser", "scenarios": "scenarios/web" },
    "ios": { "enabled": true, "tool": "maestro", "flows": "flows/ios", "appId": "com.amakaflow.app" },
    "watchos": { "enabled": true, "tool": "maestro", "flows": "flows/ios/watch", "appId": "com.amakaflow.app.watchkitapp" },
    "android": { "enabled": true, "tool": "maestro", "flows": "flows/android", "appId": "com.amakaflow.companion" },
    "wearos": { "enabled": true, "tool": "maestro", "flows": "flows/android/wear", "appId": "com.amakaflow.companion.wear" }
  }
}
